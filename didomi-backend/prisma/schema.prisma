generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Project {
  id             Int           @id @default(autoincrement())
  accountAddress String        @unique
  escrowAddress  String        @unique
  title          String
  story          String
  category       Category
  targetAmount   Int
  currentAmount  Int           @default(0)
  startDate      DateTime      @default(now())
  endDate        DateTime?
  ownerId        String?
  ownerAddress   String
  owner          User          @relation(fields: [ownerAddress], references: [walletAddress])
  imageURL       String
  websiteURL     String?
  projectStatus  ProjectStatus @default(OPEN)
  donations      Donation[]
  totalDonations Int           @default(0)
  acceptedCoins  TokenType[]
}

model Donation {
  id              Int       @id @default(autoincrement())
  accountAddress  String    @unique
  transactionHash String    @unique
  amount          Int
  tokenType       TokenType @default(SOL)
  message         String
  date            DateTime  @default(now())
  projectId       Int
  projectAddress  String
  project         Project   @relation(fields: [projectAddress], references: [accountAddress])
  donorAddress    String
  donor           User      @relation(fields: [donorAddress], references: [walletAddress])
}

model User {
  id            Int        @id @default(autoincrement())
  walletAddress String     @unique
  donations     Donation[]
  projects      Project[]
}

enum TokenType {
  SOL
  USDT
  USDC
  LINK
  RNDR
  WIF
  JUP
  NFT
}

enum ProjectStatus {
  CLOSED
  OPEN
  DRAFT
  FAILED
}

enum Category {
  EDUCATION
  MEDICAL
  MEMORIOAL
  FAITH
  EMERGENCY
  NONPROFIT
  ENVIRONMENT
  COMMUNITY
  CREATIVE
  EVENT
}
